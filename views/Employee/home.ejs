<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Big Tracker</title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <style>
        body {
            font-family: Arial, sans-serif;
            text-align: center;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }

        .header {
            background-color: #004a99;
            color: white;
            padding: 10px;
            font-size: 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px 20px;
        }

        .header img {
            height: 40px;
            margin-right: 10px;
        }

        .header .button {
            background: #fff;
            color: #004a99;
            border: 1px solid #004a99;
            border-radius: 5px;
            padding: 8px 15px;
            cursor: pointer;
            font-size: 16px;
            transition: background-color 0.3s;
        }

        .header .button:hover {
            background-color: #004a99;
            color: #fff;
        }

        .container {
            margin-top: 20px;
            padding: 0 10px;
        }

        .button-container {
            display: flex;
            justify-content: center;
            gap: 10px;
            flex-wrap: wrap;
        }

        .button {
            background: white;
            border-radius: 10px;
            padding: 15px;
            cursor: pointer;
            box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);
            text-align: center;
            width: 140px;
            font-size: 16px;
            border: none;
            font-weight: bold;
            transition: background-color 0.3s;
        }

        .button:hover {
            background-color: #ddd;
        }

        .timer {
            width: 200px;
            height: 200px;
            border: 10px solid #f08;
            border-radius: 50%;
            display: flex;
            justify-content: center;
            align-items: center;
            font-size: 24px;
            margin: 20px auto;
            cursor: pointer;
        }

        .start-visit-container {
            margin-top: 20px;
            text-align: center;
        }

        .start-visit-button {
            background: #004a99;
            color: white;
            border: 1px solid #004a99;
            border-radius: 5px;
            padding: 15px 25px;
            cursor: pointer;
            font-size: 18px;
            font-weight: bold;
            transition: background-color 0.3s;
            margin: 20px auto;
            display: inline-block;
        }

        .start-visit-button:hover {
            background-color: #003366;
        }

        @media (max-width: 600px) {
            .header {
                font-size: 18px;
                flex-direction: column;
                text-align: center;
            }

            .button-container {
                flex-direction: column;
                align-items: center;
            }

            .button {
                width: 100%;
                max-width: 200px;
            }

            .start-visit-button {
                width: 100%;
                max-width: 250px;
            }
        }

        .logo img{
            border: 2px solid black;
            border-radius: 50%;
        }
    </style>
</head>

<body>
    <div class="header">
        <div class="logo" style="display: flex; align-items: center;">
            <img src="/Big-Tracker.png" alt="Logo"> <!-- Replace with actual logo URL -->
            <div>Big Tracker</div>
        </div>
        <div>
            <button id="syncBtn" class="button">Sync</button>
            <button id="logoutBtn" class="button">Log Out</button>
        </div>
    </div>

    <div class="container">
        <div class="button-container">
            <button class="button" onclick="handleCheckIn()">Check-In</button>
            <button class="button"
                onclick="fetch('/api/employee/check-out', { method: 'POST' }).then(() => alert('Check-Out Successful!')).catch(() => alert('Error during Check-Out.'))">Check-Out</button>
        </div>

        
        <div id="timer" class="timer">
            <span id="timerText">00:00:00</span>
        </div>
        
        <p>Version: 1.19</p>
        <!-- Start Visit Button -->
        <div class="start-visit-container">
            <button class="start-visit-button" onclick="startVisit()">Start Visit</button>
        </div>
    </div>

    <script>

        // Function to start the visit (trigger API)
        async function startVisit() {
            try {
                const response = await fetch('/api/employee/startVisit', { method: 'GET' });
                if (response.ok) {
                    alert('Visit Started!');
                    // You can update any UI elements here, like showing the visit timer or changing button text
                } else {
                    alert('Error starting visit.');
                }
            } catch (error) {
                alert('Error during Start Visit.');
            }
        }

        function handleCheckIn() {
            startTimer(); // Start the timer function
            window.location.href = '/api/employee/check-in';  // Redirect to check-in API
        }

        $(document).ready(function () {
            // Sync button click
            $("#syncBtn").click(function () {
                $.ajax({
                    url: '/api/employee/syncData',
                    method: 'POST',
                    success: function (response) {
                        alert('Data synced successfully!');
                    },
                    error: function () {
                        alert('Error syncing data.');
                    }
                });
            });

            // Log out button click
            $("#logoutBtn").click(function () {
                $.ajax({
                    url: '/api/admin/logout',
                    method: 'POST',
                    success: function (response) {
                        alert('Logged out successfully!');
                        // Redirect to login page or refresh the page
                        window.location.href = '/api/admin/login'; // Example: redirect to login page
                    },
                    error: function () {
                        alert('Error logging out.');
                    }
                });
            });
        });
    </script>

    <script>
        function checkOut() {
            $.ajax({
                url: '/api/employee/check-out',
                method: 'POST',
                success: function (data) {
                    alert('Checked out successfully!');
                    console.log('Check-Out Response:', data);
                },
                error: function (xhr, status, error) {
                    console.error('Check-Out Error:', error);
                    alert('Check-Out failed!');
                }
            });
        }

        let timerInterval;

        function startTimer() {
            if (timerInterval) return; // Prevent multiple timers

            let timer = $("#timerText");
            let startTime = localStorage.getItem("startTime");

            if (!startTime) {
                startTime = Date.now(); // Save current timestamp
                localStorage.setItem("startTime", startTime);
            }

            function updateTimer() {
                let elapsedTime = Math.floor((Date.now() - startTime) / 1000);
                let hrs = String(Math.floor(elapsedTime / 3600)).padStart(2, '0');
                let mins = String(Math.floor((elapsedTime % 3600) / 60)).padStart(2, '0');
                let secs = String(elapsedTime % 60).padStart(2, '0');
                timer.text(`${hrs}:${mins}:${secs}`);
            }

            updateTimer(); // Update immediately
            timerInterval = setInterval(updateTimer, 1000);
        }

        function resetTimer() {
            clearInterval(timerInterval);
            localStorage.removeItem("startTime"); // Clear stored time
            $("#timerText").text("00:00:00");
            timerInterval = null;
        }

        $(document).ready(function () {
            if (localStorage.getItem("startTime")) {
                startTimer(); // Resume timer on page load
            }
        });
    </script>

</html>